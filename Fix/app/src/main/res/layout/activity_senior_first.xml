<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMint"
    android:orientation="vertical"
    tools:context=".SeniorFirst">
    <FrameLayout
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_width="320dp"
        android:layout_height="270dp">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/RoomImgRegister"
            android:background="@color/colorPink"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/text1"
            android:gravity="center"
            android:textSize="35dp"
            android:textColor="@color/colorPowder"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="TOUCH\n HERE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="loadPhoto"
            android:background="@color/trans"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

<TextView
    android:gravity="center"
    android:textStyle="bold"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:textSize="32dp"
    android:textColor="@color/colorPowder"
    android:text="Please Register a picture of the room to borrow."
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <Button
        android:onClick="startSenior"
        android:text="START"
        android:textSize="30dp"
        android:textColor="@color/colorPowder"
        android:textStyle="bold"
        android:background="@drawable/mainbtn2"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="350dp"
        android:layout_height="90dp" />
</LinearLayout>